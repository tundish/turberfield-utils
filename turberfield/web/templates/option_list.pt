<metal:option_list define-macro="option_list">
<section id="options">
<ul>
<li tal:repeat="(itemId, item) options.items()"
tal:attributes="
id 'options-{}'.format(itemId);
">
<div
tal:define="class_ item.__class__.__name__.lower()"
tal:omit-tag="">
<dl
tal:condition="item['_links'] | None"
tal:attributes="
id item['uuid'];
class class_">
<div tal:omit-tag="" tal:repeat="key item.public">
<dt tal:content="key"></dt>
<dd tal:content="item[key]"></dd>
</div>
</dl>
<div tal:omit-tag="" tal:repeat="action item.get('_links', [])">
<form
tal:attributes="
role 'form';
action action.typ.format(action.ref);
method action.method;
name '{}-{}-{}-{}'.format(itemId, action.name, action.method, action.rel).replace(' ','').lower();">
<fieldset>
<legend tal:content="action.name"></legend>
<div
tal:repeat="field action.parameters"
tal:attributes="class 'form-group'">
<div
tal:omit-tag=""
tal:define="
id_ '{}-{}-{}-{}'.format(itemId, action.name, action.rel, field.name).lower();
is_textarea class_ in ('publickeyview') and field.name == 'value'">
<label
tal:condition="not is_textarea"
tal:content="field.name.upper()
if field.name in ('cpu', 'jvo', 'ram')
else field.name.capitalize()"
tal:attributes="
class 'control-label';
for id_;
">
</label>
<input
tal:condition="len(field.values) <= 1 and not is_textarea"
tal:attributes="
id id_;
name field.name;
class 'form-control';
value field.values[0] if field.values else '' ;
placeholder field.name if not field.values else field.values[0] ;
pattern field.regex.pattern;
required 'required' if field.required else None;
type 'hidden' if field.name in ('',) else 'password' if field.name == 'password' else 'text';"/>
<textarea
tal:condition="is_textarea"
tal:attributes="
id id_;
name field.name;
class 'form-control';
value field.values[0] if field.values else '' ;
placeholder field.name if not field.values else field.values[0] ;
pattern field.regex.pattern;
required 'required' if field.required else None;
"></textarea>
<select
tal:condition="len(field.values) > 1 and not is_textarea"
tal:attributes="
id id_;
name field.name">
<option
tal:repeat="value field.values"
tal:content="value"
tal:attributes="
value value;
">
</option>
</select>
<div
tal:condition="field.tip"
tal:attributes="
class 'help-block';"
tal:content="structure: field.tip"></div>
</div> <!-- define, omitted -->
</div>
<div tal:attributes="class 'form-group'">
<button tal:content="action.prompt"
tal:attributes="
type 'submit';
class 'btn btn-default'"></button>
</div>
</fieldset>
</form>
</div>
</div> <!-- class_ definition -->
</li>
</ul>
</section>
</metal:option_list>
